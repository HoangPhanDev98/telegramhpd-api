{
  "name": "nodejs-hpd",
  "version": "1.0.0",
  "description": "Source code NodeJS",
  "main": "index.js",
  "repository": "https://github.com/HoangPhanDev98/nodejs-hpd.git",
  "author": "hoangphandev98",
  "license": "MIT",
  "scripts": {
    "start": "yarn build && yarn dev",
    "dev": "node dist/server.js",
    "clean": "rimraf ./dist",
    "build": "tsc",
    "migrate": "yarn clean && yarn build && sequelize db:migrate",
    "migrate:undo": "sequelize db:migrate:undo",
    "lint": "eslint \"src/**/*.ts\"",
    "lint-fix": "eslint --fix \"src/**/*.ts\"",
    "prettier": "prettier --check \"src/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.ts\"",
    "check": "yarn lint && yarn prettier",
    "test": "yarn check"
  },
  "dependencies": {
    "dayjs": "^1.11.9",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "http-status": "^1.6.2",
    "jsonwebtoken": "^9.0.1",
    "lodash": "^4.17.21",
    "mysql2": "^3.6.0",
    "qs": "^6.11.2",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.32.1",
    "sequelize-typescript": "^2.1.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/express-validator": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/lodash": "^4.14.196",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6"
  }
}
